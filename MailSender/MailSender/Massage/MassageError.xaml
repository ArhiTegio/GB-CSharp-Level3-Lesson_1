<Window x:Class="MailSender.MassageExit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailSender"
        mc:Ignorable="d"
        Title="Ошибка!" Height="150" Width="300" MaxHeight="150" MaxWidth="300">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" Padding="1">
            <Grid >
                <Grid.RowDefinitions>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>

                <TextBlock  Text="Работа программы завершена" VerticalAlignment="Center" FontSize="15" Grid.Row="0" Grid.Column="0" TextBlock.TextAlignment="Center" MaxWidth="300"></TextBlock>
                <Button Grid.Row="1" Grid.Column="0" Name="Ок" Height="40" Width ="100" Click="Exit">
                    <TextBlock Text="Ok">

                    </TextBlock>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>